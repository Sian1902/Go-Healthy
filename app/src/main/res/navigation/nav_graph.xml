<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homePageFragment">
<fragment
    android:name="com.example.gohealthy.view.WelcomeFragment"
    android:id="@+id/welcomeFragment"
    tools:layout="@layout/fragment_welcome">
    <action
        android:id="@+id/welcomeToSignup"
        app:destination="@id/signUpFragment"

        />
</fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.gohealthy.view.SignUpFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >


        <action
            android:id="@+id/action_signUpFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.gohealthy.view.signinFragment"
        android:label="signinFragment" >
        <action
            android:id="@+id/action_signinFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.gohealthy.History.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.gohealthy.view.HomePageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" />


</navigation>