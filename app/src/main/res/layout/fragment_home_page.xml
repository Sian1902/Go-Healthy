<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomePageFragment">

        <ImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:alpha="0.2"
            android:background="@drawable/mapsimage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Lunch"
            android:id="@+id/circularProgressBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="40dp"
            app:cpb_background_progressbar_color="@color/orangeText"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false" />
        <androidx.cardview.widget.CardView
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toEndOf="@id/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="120dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/whatsapp_image_2023_05_12_at_13_47_30"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/currentStepstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/circularProgressBar"
            app:layout_constraintEnd_toEndOf="@id/circularProgressBar"
            app:layout_constraintBottom_toTopOf="@id/targetSteps"

            android:textColor="@color/pale_orange"
            android:textSize="30sp"
            tools:text="1000 /"/>
        <TextView
            android:id="@+id/targetSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/map_image"
            android:textSize="30sp"
            android:textColor="@color/custom_orange"
            android:textStyle="bold"
            android:text="8000 step"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            app:strokeColor="@color/black">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logoapp" />
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="57dp"
            android:fontFamily="@font/playpen_sans"
            android:textColor="@color/orangeText"
            android:textStyle="bold"
            android:textSize="24dp"
            android:text="GO HEALTHY" />

<!--        Lunch Card-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orangeText"
            app:cardBackgroundColor="@color/bgCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                <ImageView
                    android:id="@+id/lunch_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fork_and_knife_svgrepo_com"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Cal"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            app:layout_constraintTop_toBottomOf="@+id/lunch_image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/lunch_image"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="right"
                            />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lunch"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/orangeText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/add_lunch_button"
                    app:layout_constraintEnd_toEndOf="parent" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/add_lunch_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="5dp"
                            android:layout_width="95dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center"
                            android:text="Add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textSize="13sp"
                            />


                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        Breakfast card-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map_image"
            app:layout_constraintEnd_toStartOf="@id/Lunch"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orangeText"

            app:cardBackgroundColor="@color/bgCard">
                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <ImageView
                            android:id="@+id/breakfast_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/breakfast_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cal"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            app:layout_constraintTop_toBottomOf="@+id/breakfast_image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/breakfast_image"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="end"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breakfast"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/orangeText"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/add_breakfast_button"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_gravity="center"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/add_breakfast_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="5dp"
                            android:layout_width="95dp"
                            android:layout_height="21dp"
                            android:text="Add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            />


                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        Dinner-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/Lunch"
            app:layout_constraintTop_toBottomOf="@+id/map_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orangeText"
            app:cardBackgroundColor="@color/bgCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                        <ImageView
                            android:id="@+id/dinner_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dinner_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cal"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            app:layout_constraintTop_toBottomOf="@+id/dinner_image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/dinner_image"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="end"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinner"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/orangeText"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/add_dinner_button"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_gravity="center"
                            android:id="@+id/add_dinner_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="5dp"
                            android:layout_width="95dp"
                            android:layout_height="21dp"
                            android:text="Add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textSize="13sp"
                            />


                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


<!--                Calories Card -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/burnt_calories"
            android:layout_width="120dp"
            android:layout_height="125dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/breakfast"
            app:layout_constraintEnd_toEndOf="@id/Lunch"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="120dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orangeText"
            app:cardBackgroundColor="@color/bgCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ProgressBar
                            android:id="@+id/lunch2_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALORIES"
                            android:textColor="@color/orangeText"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            app:layout_constraintTop_toBottomOf="@+id/lunch2_image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/lunch2_image"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="70dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


<!--        Workout Card-->


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/workout_card"
            android:layout_width="120dp"
            android:layout_height="125dp"
            app:layout_constraintStart_toEndOf="@+id/burnt_calories"
            app:layout_constraintTop_toBottomOf="@+id/breakfast"
            app:layout_constraintEnd_toStartOf="@id/water"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orangeText"
            app:cardBackgroundColor="@color/bgCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/weightlifting_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/_05389444_weight_lifting_cartoon_shape_design_removebg_preview"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/CaloriesBurnt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALORIES BURNT"
                            android:textColor="@color/orangeText"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="8sp"
                            app:layout_constraintTop_toBottomOf="@+id/weightlifting_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/weightlifting_img"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="80dp"/>

                        <TextView
                            android:id="@+id/Workout_calories_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10000"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/CaloriesBurnt_text"
                            android:layout_marginTop="70dp"
                            android:fontFamily="@font/poppins_bold"
                            />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/Add_workout_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="5dp"
                            android:layout_width="95dp"
                            android:layout_height="21dp"
                            android:text="Add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textSize="13sp"
                            />

                </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        Water Card-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/water"
            android:layout_width="120dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@+id/Dinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="12dp"
            android:layout_marginRight="10dp"
            app:strokeColor="@color/orangeText"
            app:cardBackgroundColor="@color/bgCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/water_image"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:src="@drawable/glass_of_water_drink_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/water_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="9sp"
                            android:textColor="@color/orangeText"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/water_image"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/no_waters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            app:layout_constraintTop_toBottomOf="@+id/water_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="33dp"
                            />
                        <ImageView
                            android:id="@+id/plus_img"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/circle_add_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:translationX="90dp"
                            android:translationY="89dp"/>
                        <ImageView
                            android:id="@+id/minus_img"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/circle_minus_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:translationX="8dp"
                            android:translationY="89dp"/>



                </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>