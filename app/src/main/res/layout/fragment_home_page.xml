<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomePageFragment">

        <ImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:alpha="0.2"
            android:background="@drawable/mapsimage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Lunch"
            android:id="@+id/circularProgressBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="40dp"
            app:cpb_background_progressbar_color="@color/custom_orange"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false" />

              <!--  <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileIMG"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="@id/app_name"
                    app:layout_constraintBottom_toBottomOf="@id/app_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/whatsapp_image_2023_05_12_at_13_47_30"/>
-->
        <TextView
            android:id="@+id/currentStepstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/circularProgressBar"
            app:layout_constraintEnd_toEndOf="@id/circularProgressBar"
            app:layout_constraintBottom_toTopOf="@id/targetSteps"

            android:textColor="@color/pale_orange"
            android:textSize="30sp"
            tools:text="1000 /"/>
        <TextView
            android:id="@+id/targetSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/map_image"
            android:textSize="30sp"
            android:textColor="@color/custom_orange"
            android:textStyle="bold"
            android:text="@string/_8000_step"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo"
                    app:layout_constraintTop_toTopOf="@id/app_name"
                    app:layout_constraintBottom_toBottomOf="@id/app_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/logoapp" />


        <ImageButton
            android:id="@+id/chatButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="23dp"

            android:background="@drawable/button_bg"
            android:src="@drawable/baseline_chat_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
          app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/playpen_sans"
            android:textColor="@color/custom_orange"
            android:textStyle="bold"
            android:textSize="24dp"
            android:text="GO HEALTHY" />

<!--        Lunch Card-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/custom_orange"
            app:strokeWidth="2dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                <ImageView
                    android:id="@+id/lunch_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fork_and_knife_svgrepo_com"
                    android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/lunchCal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cal"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/lunch"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/custom_orange"
                    />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/add_lunch_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />


                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        Breakfast card-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map_image"
            app:layout_constraintEnd_toStartOf="@id/Lunch"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/custom_orange"
            app:strokeWidth="2dp">
                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <ImageView
                            android:id="@+id/breakfast_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/breakfast_svgrepo_com"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/breakfastCal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cal"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/breakfast"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/custom_orange"
                            android:layout_gravity="center"
                            android:textSize="11sp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/add_breakfast_button"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            />


                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        Dinner-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/Lunch"
            app:layout_constraintTop_toBottomOf="@+id/map_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/custom_orange"
            app:strokeWidth="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                        <ImageView
                            android:id="@+id/dinner_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dinner_svgrepo_com"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/DinnerCal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cal"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dinner"
                            android:layout_gravity="center"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/custom_orange"
                        />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_gravity="center"
                            android:id="@+id/add_dinner_button"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:background="@drawable/transparent_bg_bordered"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            />


                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>





<!--        Workout Card-->


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/workout_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/breakfast"
            app:layout_constraintTop_toBottomOf="@+id/breakfast"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/breakfast"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/light_blue"
            app:strokeWidth="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/fire_blue"
                            android:layout_marginTop="5dp"
                            />
                        <TextView
                            android:id="@+id/Workout_calories_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            tools:text="10000" />
                        <TextView
                            android:id="@+id/CaloriesBurnt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_burnt"
                            android:textColor="@color/light_blue"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:padding="5dp"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:layout_weight="1"
                            android:textStyle="bold"
                            />



                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/Add_workout_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/add"
                            android:background="@drawable/button_bg_lightblue"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            />

                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        Water Card-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/water"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Dinner"
            app:layout_constraintEnd_toEndOf="@id/Dinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/Dinner"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/light_blue"
            app:strokeWidth="2dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/water_image"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:src="@drawable/glass_of_water_drink_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/water_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/water"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_semibold"

                            android:textColor="@color/light_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/water_image"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/no_waters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            app:layout_constraintTop_toBottomOf="@+id/water_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="30dp"
                            />
                        <ImageView
                            android:id="@+id/plus_img"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/circle_add_svgrepo_com"

                            app:layout_constraintTop_toTopOf="@id/no_waters"
                            app:layout_constraintBottom_toBottomOf="@id/no_waters"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_margin="5dp"
                          />
                        <ImageView
                            android:id="@+id/minus_img"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/circle_minus_svgrepo_com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/no_waters"
                            app:layout_constraintBottom_toBottomOf="@id/no_waters"
                            android:layout_margin="5dp"
                          />



                </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>