<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:padding="8dp">


    <!-- MaterialCardView Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
android:layout_marginHorizontal="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:strokeWidth="2dp"
        app:cardElevation="4dp"
app:strokeColor="@color/exercise"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="2dp"
            android:paddingHorizontal="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="190dp"
                android:layout_marginStart="3dp"

                android:scaleType="centerCrop"
                android:src="@drawable/run"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <LinearLayout
                android:layout_margin="8dp"
                android:id="@+id/detailsID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.65">

                <!-- Date Card -->
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#D9D9D9"
                    android:layout_marginTop="8dp"
                    app:cardElevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:text="Date"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_marginTop="2dp"
                        />
                </androidx.cardview.widget.CardView>

                <!-- Stats Row (KCAL IN, KCAL OUT, Steps) -->
                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- KCAL IN Section -->
                    <LinearLayout
                        android:padding="4dp"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="1dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"

                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="25dp"
                            android:src="@drawable/fastfood" />

                        <androidx.cardview.widget.CardView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"

                            android:gravity="center">

                            <LinearLayout
                                android:background="@color/exercise"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="14dp"

                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:text="@string/KcalIn"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/KcalIn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/KcalInCount"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- KCAL OUT Section -->
                    <LinearLayout
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/rounded_corners"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="1dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/flame"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="25dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"

                            android:gravity="center">

                            <LinearLayout
                                android:background="@color/exercise"

                                android:padding="12dp"
                                android:layout_width="85dp"                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/KcalOut"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/KcalOut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/KcalOutCount"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Steps Section -->
                    <LinearLayout
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/rounded_corners"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="1dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/running_shoe"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="25dp"
                            android:rotation="30"

                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"

                            android:gravity="center">

                            <LinearLayout
                                android:background="@color/exercise"

                                android:padding="12dp"
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Steps"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/Steps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/StepsCount"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>