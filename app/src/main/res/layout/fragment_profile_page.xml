<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_card"
        android:layout_weight="1"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image" />


    <FrameLayout
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:clipChildren="false"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addimage"
                app:layout_constraintStart_toStartOf="@id/profile_name"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toTopOf="@id/profile_name"


                />
            <!-- Name and Edit Icon -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Ahmed Elrawy"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageButton
                android:id="@+id/editBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/profile_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="15dp"/>

            <!-- Steps Information -->
            <TextView
                android:id="@+id/steps_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/profile_name"
                app:layout_constraintStart_toStartOf="@id/profile_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- Second Card (Profile Details) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_card"
        app:strokeColor="@color/custom_orange"
        app:strokeWidth="2dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row: Date of Birth -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calender" />

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="26/11/2003"
                    android:textSize="16sp" />


            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/custom_orange" />

            <!-- Second Row: Gender -->



            <!-- Third Row: Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weight" />

                <TextView
                    android:id="@+id/weightText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    tools:text="80 KG"
                    android:textSize="16sp" />


            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/custom_orange" />

            <!-- Fourth Row: Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_height" />

                <TextView
                    android:id="@+id/heightText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="183 cm"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/custom_orange" />

            <LinearLayout
                android:id="@+id/languageChanger"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/language"/>
                <TextView
                    android:id="@+id/languageText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/arabic"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/custom_orange" />
            <LinearLayout
                android:id="@+id/logoutBTN"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logout"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/logout"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

