<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/custom_orange"
    tools:context=".view.SignUpFragment">


    <ImageView
        android:id="@+id/signup_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signup_bg"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <LinearLayout
        android:id="@+id/inputFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signup_bg"
        app:layout_constraintBottom_toBottomOf="parent"

        android:orientation="vertical"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/hint_color_state"
            app:boxStrokeColor ="@color/test"
            app:hintTextColor="@color/hint_color_state"
            android:minHeight="48dp"
            app:startIconDrawable="@drawable/email_24"
            app:boxBackgroundColor="@color/textField_color"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:startIconTint="@color/black"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weightTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:textColorHint="@color/hint_color_state"
            app:boxStrokeColor ="@color/test"
            app:hintTextColor="@color/hint_color_state"
            android:minHeight="48dp"
            app:startIconDrawable="@drawable/baseline_lock_24"
            app:boxBackgroundColor="@color/textField_color"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"

            app:endIconMode="custom"
            app:startIconTint="@color/black"
            app:endIconTint="@color/black"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singUpButton"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_bg"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="20dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>